<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
<h3>Create a new listing</h3>
    <br>
    
        <div class="col-8 offset-2">

    <form method="post" action="/listings"  class="needs-validation" novalidate >
        <br><br>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input id="title" name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
        </div>
      
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea id="description" name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
        </div>
      
        <div class="mb-3">
          <label for="image" class="form-label">Image URL</label>
          <input id="image" name="listing[image]" placeholder="Enter image URL/Link" type="text" class="form-control">
        </div>
      <div class="row">     
        
            <div class="mb-3 col-md-4" >
                <label for="price" class="form-label" reqruired>Price</label>
                <input id="price" name="listing[price]" placeholder="Enter price" type="number" class="form-control" required>
            </div>
    
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input id="country" name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
            </div>
    
    
    </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input id="location" name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
        </div>
        <br><br>
      
        <button class="btn btn-dark add-btn">Add</button>
      </form>
    </div>
    </div>
    